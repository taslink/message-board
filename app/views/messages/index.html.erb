<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
         メッセージ一覧
      </div>
      <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-pill label-success"><%= message.name %></span>
        <%= message.body %>
        <br>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="row">
  <%= form_for @message, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="form-group">
      <label for="message_name" class="col-md-1 control-label">
        名前
      </label>
      <div class="col-md-11">
        <%= f.text_area :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="message_body" class="col-md-1 control-label">
        内容
      </label>
      <div class="col-md-11">
        <%= f.text_area :body, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">    
      <div class="col-md-12">
        <%= f.submit class: "btn btn-default btn-success btn-block form-control" %>
      </div>
    </div>
  <% end %>
</div>